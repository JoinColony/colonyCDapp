root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,mjs,mts}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.graphql]
indent_style = space
indent_size = 2
